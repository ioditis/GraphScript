
Ax = 100
Ay=100

pA = Point( Ax, Ay)
pB = Point( 100, 200)
pC = Point( 200, 200)

L_AB = Line( pA, pB)
L_BC = Line( pB, pC)
L_CA = Line( pC, pA)

width = 300 - (10 /2)*20
height = 100

Xx = 150         
Xy = 150
Yx = Xx          
Yy = Xy + height
Zx = Xx + width  
Zy = Xy + height
Wx = Xx + width  
Wy = Xy 

pX = Point( Xx, Xy)
pY = pX.down( height )

pZ = Point( Zx, Zy)
pW = Point( Wx, Wy)

L_XY = Line( pX, pY)
L_YZ = Line( pY, pZ)
L_ZW = Line( pZ, pW)
L_WX = Line( pW, pX)

L_XZ_diagonale = Line( pX, pZ)
L_YW_diagonale = Line( pY, pW)