
Ax = 100 ; Ay=100;

pA = new Point( Ax, Ay);
pB = new Point( 100, 200);
pC = new Point( 200, 200);

L_AB = new Line( pA, pB);
L_BC = new Line( pB, pC);
L_CA = new Line( pC, pA);

width = 300 - (10 /2)*20; height = 100;

Xx = 150 ;        Xy = 150;
Yx = Xx ;         Yy = Xy + height;
Zx = Xx + width ; Zy = Xy + height;
Wx = Xx + width ; Wy = Xy ;

pX = new Point( Xx, Xy);
pY = pX.down( height );

pZ = new Point( Zx, Zy);
pW = new Point( Wx, Wy);

L_XY = new Line( pX, pY);
L_YZ = new Line( pY, pZ);
L_ZW = new Line( pZ, pW);
L_WX = new Line( pW, pX);

L_XZ_diagonale = new Line( pX, pZ);
L_YW_diagonale = new Line( pY, pW);